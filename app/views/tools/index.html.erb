<h1>Twitter Lists</h1>

<div class="row">
  <div class="col-md-9">

    <%= form_tag twitter_list_path(:format => :csv), :role => 'form' do %>
      <div class="form-group">
        <label for="list_source">Twitter List URL or #hashtag</label>
        <%= text_field_tag :list_source, @original_list_source, :class => "form-control", :placeholder => "https://twitter.com/USAgov/lists/nasa or #hashtag" %>
      </div>
      <button type="submit" class="btn btn-default">Download CSV File</button>
    <% end %>

  </div>
</div>

